<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bbahealth.NewRecordingFragment"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/record_your_doctors_session_and_playback_at_any_time"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_margin="10dp"
        />

    <ImageButton
        android:id="@+id/buttonRecord"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:onClick="record"
        tools:ignore="OnClick"
        android:src="@color/colorAccent"
        />

    <TextView
        android:id="@+id/textViewInputNote"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/buttonRecord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/add_a_note_to_help_remind_you_of_this_meeting"
        android:textSize="15sp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextInputNote"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/buttonRecord"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        />

</RelativeLayout>
