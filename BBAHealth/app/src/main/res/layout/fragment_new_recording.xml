<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bbahealth.NewRecordingFragment"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/record_your_doctors_session_and_playback_at_any_time"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/textViewInputNote"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="@string/add_a_note_to_help_remind_you_of_this_meeting"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        />

    <EditText
        android:id="@+id/editTextInputNote"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@id/textViewInputNote"
        android:layout_toEndOf="@id/textViewInputNote"
        android:layout_marginTop="10dp"
        />

    <ImageButton
        android:id="@+id/imageViewRecordButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_record_button"
        android:layout_below="@id/editTextInputNote"
        />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageViewRecordButton"
        android:text="Play"
        />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonPlay"
        android:text="Stop"
        />

</RelativeLayout>
