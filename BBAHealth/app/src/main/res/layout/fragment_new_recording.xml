<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bbahealth.NewRecordingFragment"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/textViewClock"
        android:layout_width="325dp"
        android:layout_height="70dp"
        android:text="Timer In Development"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shadow_blue"
        android:elevation="7dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/record_your_doctors_session_and_playback_at_any_time"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_below="@id/textViewClock"
        />


    <ImageButton
        android:id="@+id/imageViewRecordButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_record_button"
        android:layout_below="@id/textView"
        />

</RelativeLayout>
