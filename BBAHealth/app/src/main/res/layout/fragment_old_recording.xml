<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bbahealth.OldRecordingFragment"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/click_a_recording_to_play_rename_or_delete"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_margin="10dp"
        />

    <ListView
        android:id="@+id/listViewPreviousRecordings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewTitle"
        android:layout_above="@+id/buttonStopPlaying"
        android:dividerHeight="2dp"
        android:divider="@color/colorAccent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/buttonStopPlaying"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="@string/stop_audio"
        android:background="@drawable/shadow_blue"
        android:elevation="15dp"
        />

</RelativeLayout>
